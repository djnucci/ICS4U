Page 9 Questions
1)	public static String flip(){
		int num = Math.random * 3;
		if (num == 0){
			return "tails";
		}
		else{
			return "heads";
		}
	}
	
2)	public static boolean arePermutations(int[] a1, int[] a2){
		boolean flag = true;
		
		if (a1.length != a2.length){
			return false;
		}
		
		boolean[] found = new boolean[a1.length];
		
		for (int i = 0; i < a1.length; i++){
			for (int j = 0; j < a1.length; j++){
				if (found[j]){
					continue;
				}
				if (a1[i] == a2[j]){
					flag = true;
					found[j] = true;
					break;
				}
				else {
					flag = false;
				}
			}
			if (!flag){
				return false;
			}
		}
		return true;
		
	}
	
